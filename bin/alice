#!/usr/bin/perl

use strict;
use warnings;

use FindBin;

BEGIN {
  # running from source dir
  if (-e "$FindBin::Bin/../lib/App/Alice") {
    use lib "$FindBin::Bin/../lib";
    # extlib present
    if (-e "$FindBin::Bin/../extlib") {
      use lib "$FindBin::Bin/../extlib/lib/perl5";
      use local::lib "$FindBin::Bin/../extlib";
    }
  }
  use App::Alice;
}

$0 = "aliced\0";
binmode(STDERR, ":utf8");
binmode(STDOUT, ":utf8");
  
App::Alice->new->run;
